{
    "name": "todos",
    "version": "1.0",
    "description": "A todo list keeper",
    "permissions": ["storage"],
    "background" : {
    	"scripts" : ["background.js"],
    	"persistent" : false
    },
    "browser_action": {
      	"default_popup": "popup/index.html",
	  	"default_icon": {
	        "16": "icons/icon_16.png",
	        "32": "icons/icon_32.png",
	        "48": "icons/icon_48.png",
	        "128": "icons/icon_128.png"
        }
    },
    "manifest_version": 2
  }